<div class='box'>
  <h1 class='is-size-3 has-text-centered'>Create your account</h2>
  <hr>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
    <div class="field">
      <%= f.label :email, class: 'label' %>
      <div class='control'>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'input is-medium' %>
        <p class='help'>
          <%= link_to "Ready to login?", new_session_path(resource_name), class: 'button is-text is-small' %>
        </p>
      </div>
    </div>

    <div class="field">
      <%= f.label :password, class: 'label' %>
      <div class='control'>
        <%= f.password_field :password, autocomplete: "current-password", class: 'input is-medium' %>        
      </div>
    </div>

    <div class="field is-grouped level">
      <div class='control'>
        <%= f.submit "Create account", class: 'button is-primary' %>
      </div>
    </div>
  <% end %>
</div>